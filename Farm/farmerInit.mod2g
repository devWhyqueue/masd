    % Estimated yields in kilograms
    if true then insert(est_yield(f1, 3500)).
    if true then insert(est_yield(f2, 4200)).

    % Initial ready field
    if true then insert(ready(f1)).

    % --- Topâ€‘level goal (Initial Goal) -----------------------------------
    if true then adopt(harvest_all_ready).
